{
  "manifest_version": 3,
  "name": "简历智投 - WeChat Job Auto Apply",
  "version": "1.0.0",
  "description": "从微信公众号招聘文章中自动提取岗位信息，智能定制简历并自动投递",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://mp.weixin.qq.com/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://mp.weixin.qq.com/s*", "https://mp.weixin.qq.com/s?*"],
      "js": ["src/content/content.js"],
      "css": ["src/styles/content.css"]
    }
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
